<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apparel">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Apparel"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:gravity="center"
                android:padding="10dp"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="gloves"
                android:scaleType="centerCrop"
                android:src="@drawable/gloves" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:src="@drawable/boots"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:onClick="boots"/>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:src="@drawable/jackets"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:onClick="jackets"/>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:src="@drawable/helmets"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:onClick="helmets"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</ScrollView>
