<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookbike11">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="900dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/book_bike_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.023"
                tools:layout_editor_absoluteX="0dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30sp"
                            android:text="Please fill your detail to book a bike."
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="370sp"
                            android:layout_height="50sp"
                            android:hint="Full Name"
                            android:paddingLeft="20dp"
                            android:textStyle="bold"
                            android:background="@drawable/btn12"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:inputType="text"
                            android:id="@+id/full_nm"
                            android:textSize="19dp"/>


                        <EditText
                            android:layout_width="370sp"
                            android:layout_height="50sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/btn12"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:id="@+id/mob"
                            android:textStyle="bold" />

            <Spinner
                android:id="@+id/model"
                android:layout_width="330sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="30dp"
                />

            <ImageView
                android:layout_width="230dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/bike_color_img"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Color :-"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"></TextView>

            <Spinner
                android:id="@+id/bike_color"
                android:layout_width="190sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginTop="-30sp"
                android:layout_marginLeft="90dp" />

            <Button
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn12"
                android:gravity="center"
                android:onClick="book"
                android:text="Book Bike"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</ScrollView>